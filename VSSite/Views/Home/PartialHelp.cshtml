@{
    Layout = null;

}
@using VSSite.Models.ForViews
@using VSSite.Resources
@model  BusinessHelpersPageModel
<style>
    .our-contacts {
        display: grid;
        grid-template-columns: auto 1fr;
        grid-column-gap: 15px;
        grid-row-gap: 6px;
        font: 18px spec;
        margin: 20px 0;
    }
</style>


@{
    foreach (var i in Model.BusinessHelperses)
    {
        <div class="infoblock">
            @if (Translator.language == "ru")
            {
                <h3 class="infoblock__header">@i.Title</h3>
            }
            else
            {
                <h3 class="infoblock__header">@i.TitleEu</h3>
            }

            <div class="infoblock__img-holder">
                <img class="infoblock__img-marker" src="/Content/img/gear-wheel.png" alt="">
                <div class="infoblock__main-img-wrapper">
                    <img class="infoblock__main-img" src="/Images/Logo/@i.Logo" alt="">
                </div>
            </div>
            <div class="infoblock__content-holder">
                @if (Translator.language == "ru")
                {
                    <div class="infoblock__text">
                        <p>@Html.Raw(i.Description)</p>
                    </div>
                }
                else
                {
                    <div class="infoblock__text">
                        <p>@Html.Raw(i.DescriptionEn)</p>
                    </div>
                }

                <div class="our-contacts">
                    <p style="font-weight: 900">Наші номери телефонів:</p>
                    <div>
                        @if (!string.IsNullOrEmpty(i.Phone1))
                        {
                            <p><a style="color: dodgerblue; cursor: pointer" href="tel:i.Phone3">@i.Phone3</a></p>
                        }
                        @if (!string.IsNullOrEmpty(i.Phone2))
                        {
                            <p><a style="color: dodgerblue; cursor: pointer" href="tel:i.Phone3">@i.Phone3</a></p>
                        }
                        @if (!string.IsNullOrEmpty(i.Phone3))
                        {
                            <p><a style="color: dodgerblue; cursor: pointer" href="tel:i.Phone3">@i.Phone3</a></p>
                        }

                    </div>
                    <p style="font-weight: 900">Наш e-mail:</p>
                    <p><a style="color: dodgerblue; cursor: pointer" href="mailto:@i.Email">@i.Email</a></p>

                    @if (!string.IsNullOrEmpty(i.Site))
                    {
                        <p style="font-weight: 900"> @Translator.site:</p>
                        <p><a style="color: dodgerblue; cursor: pointer" href="@i.Site">@i.Site</a></p>
                    }

                    <p style="font-weight: 900">Мiсто</p>
                    @if (Translator.language == "ru")
                    {
                        <p>@i.City</p>
                    }
                    else
                    {
                        <p>@i.CityEn</p>
                    }
                    <p style="font-weight: 900">Адреса</p>
                    @if (Translator.language == "ru")
                    {
                        <p>@i.Address</p>
                    }
                    else
                    {
                        <p>@i.AddressEn</p>
                    }
                   
                    <div class="infoblock__social-btns-area">
                        @*<a class="infoblock__social-btn" href="#" target="_blank"><img class="infoblock__social-img" src="assets/img/youtube.png" alt="youtube.png"></a>*@
                        @if (!string.IsNullOrEmpty(i.Fb))
                        {
                            <a class="infoblock__social-btn" href="@i.Fb" target="_blank"><img class="infoblock__social-img" src="/Content/img/facebook.png" alt="facebook.png"></a>
                        }
                        @if (!string.IsNullOrEmpty(i.Tw))
                        {
                            <a class="infoblock__social-btn" href="@i.Tw" target="_blank"><img class="infoblock__social-img" src="/Content/img/twitter.png" alt="twitter.png"></a>
                        }

                    </div>
                </div>




            </div>
        </div>
    }

}
<div class="pagination">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("HelpSort", new { page = x }))
</div>

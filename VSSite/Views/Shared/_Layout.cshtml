        @(Html.Kendo().Menu().Name("MainMenu").Items(items =>
                                            {
                                                items.Add().Text("Бизнес")
                                                    .Items(inner =>
                                                    {
                                                        inner.Add().Text("Бизнесы").Action("Index","Business");
                                                        inner.Add().Text("Отделения бизнеса").Action("Index","Branch");;
                                                        inner.Add().Text("Категории бизнеса").Action("Index","Category");
                                                    });
                                                items.Add().Text("Новости")
                                                    .Items(inner =>
                                                    {
                                                        inner.Add().Text("Все новости").Action("Index","News");
                                                        inner.Add().Text("Добавить новость").Action("NewsAdd","News");
                                                    });
                                                items.Add().Text("Рубрики")
                                                    .Items(inner =>
                                                    {
                                                        inner.Add().Text("Полезное");
                                                        inner.Add().Text("Полезыне рубрики");

                                                    });
                                                items.Add().Text("Здравствуйте," + User.Identity.GetUserName())
                                                    .Items(inner =>
                                                    {
                                                        inner.Add().Text("Настройка").Action("Index", "Manage");
                                                        inner.Add().Text("Выход").Content(@<text>
                                                            @(Html.Kendo().Button()
                                                                                                    .Name("primaryTextButton")
                                                                                                    .HtmlAttributes(new { type = "button", @class = "k-primary" })
                                                                                                    .Content("Выход")
                                                                                                    .Events(ev => ev.Click("logout")))
                                                        </text>);

                                                });
                                        }))
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>
    </div>

<script>
    function logout() {
        document.getElementById('logoutForm').submit();
    }
</script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

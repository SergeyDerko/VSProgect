
@{
    ViewBag.Title = "О нас";
}
@model VSCore.Entity.AboutUs
<h2>О нас</h2>

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <style>

        .k-notification {
            border: 0;
        }

        /* Success template */
        .k-notification-upload-success {
            background: rgba(0%,60%,0%,.7);
            color: #fff;
        }
        .upload-success {
            width: 240px;
            height: 100px;
            padding: 0 30px;
            line-height: 100px;
        }
        .upload-success h3 {
            font-size: 1em;
            font-weight: normal;
            display: inline-block;
            vertical-align: middle;
        }
        .upload-success img {
            display: inline-block;
            vertical-align: middle;
            margin-right: 10px;
        }
    </style>
</head>

<body>
@(Html.Kendo().Notification()
      .Name("notification")
      .Position(p => p.Pinned(true).Top(30).Right(30))
      .Stacking(NotificationStackingSettings.Down)
      .AutoHideAfter(2500)
      .Templates(t =>
      {
          t.Add().Type("upload-success").ClientTemplateID("successTemplate");
      })
      )
<br/>
<br/>
<br/>
<div class="container-fluid">
    <input type="hidden" id="buisnesId" value="@Model.Id"/>
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-body">
                    <table class="table table-striped table-bordered">
                        <tbody>
                        <tr>
                            <td>Действия</td>
                            <td>@(Html.Kendo().Button().Name("save").Content("Сохранить").Events(e => e.Click("Save")).HtmlAttributes(new {@class = "btn btn-success"}))</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="panel">
                <div class="panel-heading">
                    <h4>INFO</h4>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered">
                        <tbody>
                        <tr>
                            <td class="">PHONE1</td>
                            <td class="">@(Html.Kendo().TextBox().Name("phone1").Value(@Model.Phone1).HtmlAttributes(new {style = "display:block; width:100%"}))</td>
                            <td class="">Email</td>
                            <td class="">@(Html.Kendo().TextBox().Name("email").Value(@Model.Email).HtmlAttributes(new {style = "display:block; width:100%"}))</td>
                        </tr>
                        <tr>
                            <td class="">PHONE2</td>
                            <td class="">@(Html.Kendo().TextBox().Name("phone2").Value(@Model.Phone2).HtmlAttributes(new {style = "display:block; width:100%"}))</td>
                        </tr>
                        <tr>
                            <td class="">PHONE3</td>
                            <td class="">@(Html.Kendo().TextBox().Name("phone3").Value(@Model.Phone3).HtmlAttributes(new {style = "display:block; width:100%"}))</td>
                        </tr>
                        </tbody>
                    </table>


                </div>
            </div>
            <div class="panel">
                <div class="panel-heading">Description</div>
                <div class="panel-body">
                    @(Html.Kendo().Editor()
                          .Name("bodyUa")
                          .Resizable(resizeble => resizeble.Content(true).Toolbar(true))
                          .Tools(tools => tools
                              .Clear()
                              .Bold().Italic().Underline().Strikethrough()
                              .JustifyLeft().JustifyCenter().JustifyRight().JustifyFull()
                              .InsertUnorderedList().InsertOrderedList()
                              .Outdent().Indent()
                              .CreateLink().Unlink()
                              .SubScript()
                              .SuperScript()
                              .TableEditing()
                              .ViewHtml()
                              .CleanFormatting()
                              .FontName()
                              .FontSize()
                              .FontColor().BackColor()
                          )
                          .Value(Model.Description)
                          )
                </div>
            </div>
            <div class="panel">
                <div class="panel-heading">DescriptionEn</div>
                <div class="panel-body">
                    @(Html.Kendo().Editor()
                          .Name("bodyEn")
                          .Resizable(resizeble => resizeble.Content(true).Toolbar(true))
                          .Tools(tools => tools
                              .Clear()
                              .Bold().Italic().Underline().Strikethrough()
                              .JustifyLeft().JustifyCenter().JustifyRight().JustifyFull()
                              .InsertUnorderedList().InsertOrderedList()
                              .Outdent().Indent()
                              .CreateLink().Unlink()
                              .SubScript()
                              .SuperScript()
                              .TableEditing()
                              .ViewHtml()
                              .CleanFormatting()
                              .FontName()
                              .FontSize()
                              .FontColor().BackColor()
                          )
                          .Value(Model.DescriptionEn)
                          )
                </div>
            </div>
        </div>
    </div>
</div>
<script id="successTemplate" type="text/x-kendo-template">        
    <div class="upload-success">
        <img src="../content/img/success-icon.png" />
        <h3>#= message #</h3>
    </div>
</script>
<script>


    function Save() {
        var notification = $("#notification").data("kendoNotification");
        var _bodyContentUA = $("#bodyUa").data('kendoEditor').encodedValue();
        var _bodyContentEN = $("#bodyEn").data('kendoEditor').encodedValue();
        var _phone1 = $("#phone1").val();
        var _email = $("#email").val();
        var _phone2 = $("#phone2").val();
        var _phone3 = $("#phone3").val();
        var _id = $("#buisnesId").val();

        var data = {
            id: _id,
            bodyContentUA: _bodyContentUA,
            bodyContentEN: _bodyContentEN,
            phone1: _phone1,
            email: _email,
            phone2: _phone2,
            phone3: _phone3

        };
        $.ajax({
            type: "POST",
            url: "/AboutUs/Save",
            data: data,
            success: function() {
                notification.show({
                    message: "Успешно сохранено"
                }, "upload-success");
            }
        });

    }

</script>
</body>
</html>

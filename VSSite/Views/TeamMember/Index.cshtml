
@{
    ViewBag.Title = "Тима";
}

<h2>Тима</h2>
<input type="hidden" id="idToDel" value="" />
@(Html.Kendo().Grid<VSCore.Entity.TeamMember>()
      .Name("grid")
      .HtmlAttributes(new { style = "height: calc(100vh - 30px)" })
      .Columns(columns =>
      {
          columns.Bound(c => c.Photo).ClientTemplate("<img src='" + Url.Content("~/Images/Team/") + "#:data.Photo#' alt='#: data.Name #' height='62' width='auto'/>");
          columns.Bound(c => c.Name).Title("NAME UA");
          columns.Bound(c => c.Email);
          columns.Bound(c => c.City);
          columns.Bound(c => c.Phone1);
          columns.Command(command =>
          {
              command.Custom("Edit").Click("openToEdit").Text("<span class='k-icon k-i-edit'></span>Редактор"); 
              command.Custom("Delete").Click("openToDelete").Text("<span class='k-icon k-i-close-circle'></span>Удалить");

          }).Width(250);
      })
      .ToolBar(tb =>
      {
          tb.Template(@<text>
                          <div class="refreshBtnContainer">
                              <a href="\\#" class="k-pager-refresh k-link k-button k-button-icon" title="Refresh" id="refreshPage"><span class="k-icon k-i-reload"></span></a>
                          </div>
                          <div class="refreshBtnContainer">
                              <a href="\\#" class="k-pager-refresh k-link k-button k-button-icon" title="Add" id="addNew"><span class="k-icon k-i-file-add"></span></a>
                          </div>
                       </text>);
      })
      .Pageable()
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .PageSize(20)
          .Model(model => model.Id(p => p.Id))
          .Read(read => read.Action("TeamMember_Read", "TeamMember"))
      ))

@(Html.Kendo().Dialog()
      .Name("confirm")
      .Visible(false)
      .Title("Удаление участиника")
      .Content("<p>Жалаете удалить данного участиника</p>")
      .Width(300)
      .Modal(true)
      .Actions(act =>
      {
          act.Add().Text("Отмена").Primary(true);
          act.Add().Text("Удалить").Action("onOK");
      })
      )

<script>
    $(function() {
        var grid = $("#grid");
        grid.find(".k-grid-toolbar").on("click",
            "#refreshPage",
            function(e) {
                e.preventDefault();
                grid.data("kendoGrid").dataSource.read();
            });
        grid.find(".k-grid-toolbar").on("click",
            "#addNew",
            function () {
                location.href = '/TeamMember/AddNew';
            });
    });

    function openToEdit(e) {
        e.preventDefault();
        var tr = $(e.target).closest("tr");
        var data = this.dataItem(tr);
        location.href = '/TeamMember/Edit/' + data.Id;
    }

    function openToDelete(e) {
        e.preventDefault();
        var tr = $(e.target).closest("tr"); // get the current table row (tr)
        // get the data bound to the current table row
        var data = this.dataItem(tr);
        $("#idToDel").val(data.Id);
        var dialog = $("#confirm");
        dialog.data("kendoDialog").open();
    }

    function onOK() {
        var a = { id: $("#idToDel").val() };
        $.ajax({
            type: "POST",
            url: "/TeamMember/Delete",
            data: a,
            success: function() {
                location.reload();
            }
        });
    }
</script>
<style>
    #grid .k-grid-toolbar {
        padding: .6em 1.3em .6em .4em;
    }

    .category-label {
        vertical-align: middle;
        padding-right: .5em;
    }

    #category {
        vertical-align: middle;
    }

    .refreshBtnContainer {
        display: inline-block;
    }

    .toolbar {
        float: right;
    }
</style>